<ListView x:Class="Omega.Sales.WPF.CustomControl.ListViewPart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d">
    <ListView.View>
        <GridView >
            <GridViewColumn DisplayMemberBinding="{Binding Path=name}">Имя</GridViewColumn>
            <GridViewColumn DisplayMemberBinding="{Binding Path=id_user_sys}" Width="100">Пользователь</GridViewColumn>
            <GridViewColumn DisplayMemberBinding="{Binding Path=id}">Ид</GridViewColumn>
        </GridView>
    </ListView.View>
</ListView>
